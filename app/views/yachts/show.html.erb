<div class="container my-5">

<div>
    <h2><%= @yacht.name %></h2>
    <div class="d-flex border-bottom">
      <p class="m-2"><i class="fa-solid fa-person"></i><%= @yacht.capacity %></p>
      <p class="m-2">Location: <%= @yacht.location %></p>
    </div>

    <div>

          <% if @yacht.photo.attached? %>
            <img src="<%= cl_image_path @yacht.photo.key %>" alt="yacht-image" class="show-img">
          <% else %>
            <img src="https://images.unsplash.com/photo-1567899378494-47b22a2ae96a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8NHx8eWFjaHR8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=800&q=60" alt="yacht-image">
          <% end %>
    </div>
</div>

    <li><%= @yacht.user.first_name %> <%= @yacht.user.last_name %></li>
    <li>Price: Â£<%= @yacht.price_per_night %></li>
    <li>Capacity: <%= @yacht.capacity %></li>
    <li>Amenities: <%= @yacht.amenities %></li>
    <li>Description: <%= @yacht.description %></li>
    <li>Photo: <%= @yacht.photo.key %>


  <%= link_to "Back to all Yachts", yachts_path %>

  <%= simple_form_for [@yacht, @booking] do |f| %>
    <%= f.input :check_in,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>
    <%= f.input :check_out,
              as: :string,
              input_html: { data: { controller: "datepicker" } } %>

    <%= f.input :guests %>
    <%= f.submit %>
  <% end %>
</div>
